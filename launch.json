  "version": "0.2.0",
  "configurations": [
    {
      "name": "(gdb) Launch app_name",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/bin/app_name",
      "args": ["-D"],
      "stopAtEntry": false,
      "cwd": "/home/ruggero/Documents/...",
      "environment": [],
      "externalConsole": false,
      "MIMode": "gdb",
      "preLaunchTask": "build",
      // "preLaunchTask": "build_debug",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ]
    }
  ]
}
